@using CuaHangSua.Models.Entities

<style>
    .item_quantity {
        position: absolute;
        right: 60px;
        top: 0px;
        width: 20px;
        height: 20px;
        line-height: 20px;
        text-align: center;
        border-radius: 50%;
        font-size: 10px;
        color: #FFF;
        background-color: #D10024;
    }
</style>


@{
    Cart cart = (Cart)Session["Cart"];
    int total = 0;

    if (cart != null)
    {
        total = cart.TotalItem();
    }
}


<div class="header">
    <div class="container">
        <div class="logo">
            <div class="col-md-2 col-sm-2">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/logo.jpg" alt=""></a>
            </div>
            <div class="col-md-5 col-sm-5 hidden-xs search">
                <form action="/Home/Search" method="post" class="search-form">
                    <input type="text" name="contentSearch" value="@ViewBag.contentSearch" placeholder="Nhập từ khóa tìm kiếm" class="search-input">
                    <input type="submit" value="Tìm kiếm " class="search-btn">
                </form>
            </div>
            <div class="col-md-2 col-sm-2 hidden-xs sign-in" style="text-align: center; margin-top: 10px">

                <img style="width: 60px; " src="~/Content/Images/user.png" alt="">
                @if (@Session["TenKhachHang"] != null)
                {
                    <div>
                        <span style="color:forestgreen;">
                            @Session["TenKhachHang"]
                            <a href="/Account/Logout">
                                <span title="Đăng xuất" class="glyphicon glyphicon-log-out"></span>
                            </a>
                        </span>
                    </div>
                }
                else
                {
                    <a href="/Account/Login">
                        <p>Đăng nhập</p>
                    </a>
                }

            </div>

            <div class="col-md-2 col-sm-2 hidden-xs cart" style="text-align: center;margin-top: 10px">
                <a href="/Cart/CartSummary">
                    <img style="width: 60px; " src="~/Content/Images/cart.png" alt="">
                    <p>Giỏ hàng</p>
                </a>
                <div id="item_quantity" class="item_quantity">@total</div>
            </div>
        </div>

        <div style="text-align: center;" class="hidden-lg hidden-md hidden-sm">
            <h1><a style="font-size: 20px; color: green" href="index.html">Thế Giới Sữa</a></h1>
        </div>
    </div>
    <div style="background: green" class="mobile-menu hidden-lg hidden-md hidden-sm">
        <span style="padding-left: 10px; " class="mobile-cart">
            <a href="/ShoppingCart/Index"><img src="~/Content/Images/cart-white.png" alt=""></a>
        </span>

        <span class="mobile-cart">

            @if (@Session["TenKhachHang"] != null)
            {
                <a style="color:white; margin-left:60px">
                    @Session["TenKhachHang"]
                </a>
                <a style="color:white; " href="/Account/Logout">
                    <span class="glyphicon glyphicon-log-out"></span>
                </a>
            }
            else
            {
                <a href="/Account/Login" style="color:white; margin-left:60px">
                    Đăng nhập
                </a>
            }
        </span>

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>

</div>