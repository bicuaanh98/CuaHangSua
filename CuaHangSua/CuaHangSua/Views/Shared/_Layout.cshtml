<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Thế giới sữa</title>
    <link rel="shortcut icon" href="~/Content/Images/logo.jpg">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css">
    <link rel="stylesheet" href="~/Content/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="~/Content/footer-distributed-with-address-and-phones.css" rel="stylesheet" />
    <link href="~/Content/style_end_user.css" rel="stylesheet" />
    <link href="~/Content/style_2.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        @RenderPage("~/Views/Shared/Header.cshtml")
    </div>
    @Html.Action("NavMenu", "Home")

    @RenderPage("~/Views/Shared/Banner.cshtml")

    <div class="main">
        <div class="container clearfix">
            @Html.Action("CategoryMenu", "Home")
            <div class="col-md-9 col-sm-12 col-xs-12">
                <div id="product_area">
                    @RenderBody();
                </div>
            </div>
        </div>
    </div>
    @RenderPage("~/Views/Shared/footer.cshtml")
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script>
        $(document).ready(function () {

            $(".owl-carousel").owlCarousel({
                items: 1,
                loop: true,
                autoplay: true
            });
        });
    </script>
</body>
</html>
